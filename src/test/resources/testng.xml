<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SuiteCRM Test Suite" verbose="1" parallel="tests" thread-count="2">
    <listeners>
        <!-- Allure TestNG Listener -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <!-- Custom TestListener -->
        <listener class-name="utils.listeners.TestListener"/>
        <!-- Custom TestSuiteListener -->
        <listener class-name="utils.listeners.TestSuiteListener"/>
        <!-- Custom AnnotationTransformer, чтобы не прописывать вручную RetryAnalizer к каждому тесту -->
        <listener class-name="utils.AnnotationTransformer" />
    </listeners>

    <!-- Тесты для Chrome -->
    <test name="UI_Tests_Chrome" preserve-order="false" parallel="classes" thread-count="3">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.HomeTest"/>
            <class name="tests.api.AuthTest"/>
        </classes>
    </test>

    <!-- Тесты для Firefox -->
    <test name="UI_Tests_Firefox" preserve-order="false" parallel="classes" thread-count="3">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.HomeTest"/>
            <class name="tests.api.AuthTest"/>
        </classes>
    </test>
</suite>
